        </template>
    </category>

    <category>
        <pattern>HEY</pattern>
        <template>
            <srai>HELLO</srai>
        </template>
    </category>

    <category>
        <pattern>GOOD MORNING</pattern>
        <template>
            <srai>HELLO</srai>
        </template>
    </category>
</aiml>
